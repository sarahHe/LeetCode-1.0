class Solution {
public:
    int minPathSum(vector<vector<int> > &grid) {
        vector<int> sum(grid[0].size() + 1, INT_MAX);
        sum[1] = 0;
        for (int i = 0; i < grid.size(); i++) {
            for (int j = 1; j <= grid[i].size(); j++) {
                sum[j] = grid[i][j-1] + min(sum[j-1], sum[j]);
            }
        }
        return sum.back();
    }
};
