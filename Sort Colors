class Solution {
public:
    void sortColors(int A[], int n) {
        if(n == 0 || n == 1)
            return;
    
        int i = 0, start = 0, end = n -1;
        while(i < n && start < n && end >= 0) {
            if(A[i] == 0 && i > start) 
                    swap(A[i], A[start++]);
            else if (A[i] == 2 && i < end) 
                    swap(A[i], A[end--]);
            else
                i++;
        }
    }
};
