class Solution {
public:
    bool canJump(int A[], int n) {
        if (n <= 1) return true;
        
        int max_jump = A[0], cur = 1;
        while (cur < n && max_jump >= cur) {
            if (cur + A[cur] > max_jump)
                max_jump = cur + A[cur];
            cur++;
        }
        return max_jump >= n - 1;
    }
};
