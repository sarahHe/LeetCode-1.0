/**
 * Definition for binary tree
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    bool getSum(TreeNode *root, int sum, int tmp) {
        if (!root->left && !root->right)
            return (tmp + root->val == sum);
        if (!root->left && root->right)
            return getSum(root->right, sum, tmp + root->val);
        if (root->left && !root->right)
            return getSum(root->left, sum, tmp + root->val);
        
        return getSum(root->left, sum, tmp + root->val) || getSum(root->right, sum, tmp + root->val);
    }

    bool hasPathSum(TreeNode *root, int sum) {
        if (!root) return false;
        
        int tmp = 0;
        return getSum(root, sum, tmp);
    }
};
