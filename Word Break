class Solution {
public:
    bool wordBreak(string s, unordered_set<string> &dict) {
        vector<bool>    match(s.length() + 1, false);
        match[0] = true;
        for (int i = 0; i < s.length(); i++) {
            if (match[i]) {
                for (int j = 1; j <= s.length() - i; j++) {
                    if (dict.find(s.substr(i, j)) != dict.end())
                        match[i + j] = true;
                }
            }
        }
        return match.back();
    }
};
