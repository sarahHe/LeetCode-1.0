class Solution {
public:
    void rotate(vector<vector<int> > &matrix) {
        int size = matrix.size();
        for (int i = 0; i < size/2; i++) {
            for (int j = 0; j < size; j++)
                swap(matrix[i][j], matrix[size - i - 1][j]);
        }
        
        for (int i = 0; i < size; i++) {
            for (int j = i; j < size; j++)
                swap(matrix[j][i], matrix[i][j]);
        }
    }
};
