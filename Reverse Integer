#include <vector>
#include <cmath>
using namespace std;
class Solution {
public:
    int reverse(int x) {
        if (x >= INT_MAX || x <= INT_MIN)
            return 0;
        if (x == 0)
            return x;
        else {
            vector<int> digits;
            bool neg=false;
            if (x < 0) {
                neg = true;
                x = 0-x;
            }
            while (x / 10 != 0) {
                digits.push_back(x%10);
                x /= 10;
            }
            digits.push_back(x);

            int sum = 0, size;
            size = (int)digits.size();
            for (int i = 0; i < size ; i++) {
                if (sum + pow(10, size-1-i) * digits[i] >= INT_MAX)
                    return 0;
                sum = sum + pow(10, size-1-i) * digits[i];
            }
            if (neg)
                return -sum;
            else
                return sum;
        }
    }
};
